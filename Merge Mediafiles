#!/bin/bash

# Strengeres Fehler-Handling (aber nicht beim gesamten Pipeline-UI-Teil)
set -o errexit -o nounset -o pipefail

LOGFILE="/tmp/nautilus_merge_ffmpeg.log"
exec >>"$LOGFILE" 2>&1

echo "---- $(date) start ----"

# --- Abhängigkeiten prüfen (mit GUI/CLI-Fallback) ---------------------------------------------
need_cmds=("ffmpeg" "yad")
missing=()
for c in "${need_cmds[@]}"; do
  if ! command -v "$c" >/dev/null 2>&1; then
    missing+=("$c")
  fi
done

if [ ${#missing[@]} -gt 0 ]; then
  # Fedora-Hinweis für ffmpeg (RPM Fusion)
  rpmfusion_hint=""
  if printf '%s\n' "${missing[@]}" | grep -q '^ffmpeg$'; then
    rpmfusion_hint="\nHinweis: Auf Fedora ist ffmpeg meist in RPM Fusion. Aktivierung z. B.:\n  sudo dnf install -y https://mirrors.rpmfusion.org/free/fedora/rpmfusion-free-release-$(rpm -E %fedora).noarch.rpm\n  sudo dnf install -y ffmpeg"
  fi

  msg="Fehlende Abhängigkeiten: ${missing[*]}\n\nInstalliere auf Fedora z. B.:\n  sudo dnf install -y ${missing[*]}${rpmfusion_hint}"

  if command -v yad >/dev/null 2>&1; then
    yad --title="Abhängigkeiten fehlen" --text="$msg" --button=gtk-ok:0 --center || true
  elif command -v zenity >/dev/null 2>&1; then
    zenity --info --title="Abhängigkeiten fehlen" --text="$msg" || true
  elif command -v notify-send >/dev/null 2>&1; then
    notify-send "Abhängigkeiten fehlen" "$msg"
  else
    echo "$msg" >&2
  fi
  exit 1
fi

# -----------------------------------------------------------------------------------------------
# Falls keine Dateien ausgewählt wurden, beenden
: "${NAUTILUS_SCRIPT_SELECTED_FILE_PATHS:-}"
if [ -z "${NAUTILUS_SCRIPT_SELECTED_FILE_PATHS:-}" ]; then
  if command -v yad >/dev/null 2>&1; then
    yad --image=dialog-error --text="Keine Dateien ausgewählt." --button=gtk-ok:0 --center || true
  else
    echo "Keine Dateien ausgewählt." >&2
  fi
  exit 1
fi

# Bestimme das Verzeichnis und die erste Datei (sicher gegen Leerzeichen)
FIRST_FILE=$(echo "${NAUTILUS_SCRIPT_SELECTED_FILE_PATHS}" | head -n 1)
DIRNAME=$(dirname "${FIRST_FILE}")
EXTENSION="${FIRST_FILE##*.}"

# Extrahiere den Basisnamen ohne die Zahlenfolge am Ende
BASENAME=$(basename "${FIRST_FILE}" | sed -E 's/_[0-9]{3}\.[^.]+$//')

# Hole den Erstellungszeitpunkt der ersten Datei (YYYY-MM-DD)
TIMESTAMP=$(stat -c %y "${FIRST_FILE}" | cut -d' ' -f1)
OUTPUT_FILE="${BASENAME}_${TIMESTAMP}.${EXTENSION}"

# Sortiere die Dateien nach Namen (Zeilenweise)
SORTED_FILES=$(echo "${NAUTILUS_SCRIPT_SELECTED_FILE_PATHS}" | sort)

echo "FIRST_FILE=$FIRST_FILE"
echo "DIRNAME=$DIRNAME"
echo "EXTENSION=$EXTENSION"
echo "OUTPUT_FILE=$OUTPUT_FILE"

yad --title="Zusammenfügen bestätigen" \
    --text="Die folgenden Dateien werden in dieser Reihenfolge zusammengefügt:" \
    --list --column="Dateien" $(echo "${SORTED_FILES}" | tr '\n' ' ') \
    --button=gtk-cancel:1 --button=gtk-ok:0 || exit 1

# Überprüfe den verfügbaren Speicherplatz
REQUIRED_SPACE=$(du -c ${NAUTILUS_SCRIPT_SELECTED_FILE_PATHS} | tail -n 1 | awk '{print $1}')
AVAILABLE_SPACE=$(df -P "${DIRNAME}" | tail -n 1 | awk '{print $4}')

echo "REQUIRED_SPACE=$REQUIRED_SPACE KB, AVAILABLE_SPACE=$AVAILABLE_SPACE KB"

if [ "${AVAILABLE_SPACE}" -lt "${REQUIRED_SPACE}" ]; then
    yad --image=dialog-error --button=gtk-ok:0 --center --text="Nicht genügend Speicherplatz verfügbar!" || true
    exit 1
fi

cd "${DIRNAME}"

# Erstelle eine temporäre Liste der Dateien (robust gegen Leerzeichen)
LIST_FILE=$(mktemp)
while IFS= read -r file; do
  echo "file '$file'" >> "${LIST_FILE}"
done <<< "${SORTED_FILES}"

echo "LIST_FILE created at ${LIST_FILE}"
cat "${LIST_FILE}"

# Test: Copy möglich?
NEED_REENCODE=0
if ffmpeg -hide_banner -v error -f concat -safe 0 -i "${LIST_FILE}" -c copy -t 0.1 -f null - </dev/null 2>/dev/null; then
  NEED_REENCODE=0
else
  NEED_REENCODE=1
fi

echo "NEED_REENCODE=$NEED_REENCODE"

# Optional: Nutzer fragen, ob re-encode ok ist
if [ "${NEED_REENCODE}" -eq 1 ]; then
  yad --title="Neukodierung erforderlich" --text="Die Dateien müssen neukodiert werden. Fortfahren?" --button=gtk-no:1 --button=gtk-yes:0 || { rm -f "${LIST_FILE}"; exit 1; }
fi

# -------- Stabiler Fortschritt via FIFO (Fenster erscheint garantiert) -------------------------
# Wir nutzen ein Named Pipe (FIFO): YAD liest daraus, ffmpeg läuft parallel.
PROG_FIFO=$(mktemp -u)
mkfifo "$PROG_FIFO"

# Start UI zuerst (pulsierend – garantiert sichtbar). Wir schalten auf 100%, wenn ffmpeg fertig ist.
yad --progress --pulsate --no-cancel --auto-close --title="Zusammenfügen läuft" --text="# Bitte warten..." < "$PROG_FIFO" &
YAD_PID=$!

echo "YAD_PID=$YAD_PID"

# ffmpeg in Hintergrund starten (keine Pipe-Abhängigkeit mehr)
set +e  # Ab hier keine harte Beendigung bei Fehlern, wir zeigen stattdessen Meldungen
FF_ERR=0
if [ "${NEED_REENCODE}" -eq 1 ]; then
  case "${EXTENSION}" in
    mp4|mov|mkv)
      ffmpeg -y -f concat -safe 0 -i "${LIST_FILE}" -c:v libx264 -preset fast -crf 23 -c:a aac "${OUTPUT_FILE}" || FF_ERR=$?
      ;;
    mp3|aac|ogg)
      ffmpeg -y -f concat -safe 0 -i "${LIST_FILE}" -c:a libmp3lame "${OUTPUT_FILE}" || FF_ERR=$?
      ;;
    wav|flac)
      ffmpeg -y -f concat -safe 0 -i "${LIST_FILE}" -c:a flac "${OUTPUT_FILE}" || FF_ERR=$?
      ;;
    *)
      ffmpeg -y -f concat -safe 0 -i "${LIST_FILE}" -c copy "${OUTPUT_FILE}" || FF_ERR=$?
      ;;
  esac
else
  ffmpeg -y -f concat -safe 0 -i "${LIST_FILE}" -c copy "${OUTPUT_FILE}" || FF_ERR=$?
fi

# Signal an YAD: fertig
{
  echo 100
  echo "# Fertig."
} > "$PROG_FIFO"

# Aufräumen FIFO und Liste
rm -f "$PROG_FIFO" "${LIST_FILE}"

# Fehlerbehandlung/Erfolgsmeldung
if [ "$FF_ERR" -ne 0 ]; then
  echo "ffmpeg exit code: $FF_ERR"
  if command -v yad >/dev/null 2>&1; then
    yad --image=dialog-error --text="Fehler beim Zusammenfügen (Code $FF_ERR).\nSiehe Log: $LOGFILE" --button=gtk-ok:0 --center || true
  else
    echo "Fehler beim Zusammenfügen (Code $FF_ERR). Siehe Log: $LOGFILE" >&2
  fi
  exit $FF_ERR
else
  if command -v yad >/dev/null 2>&1; then
    yad --image=dialog-information --text="Erfolg: ${OUTPUT_FILE}" --button=gtk-ok:0 --center || true
  fi
fi

echo "---- $(date) end ----"
